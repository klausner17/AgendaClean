@{
    ViewBag.Title = "Contatos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/contacts")


<div ng-controller="contactsController">

    <!--Main view-->
    <div class="container">
        <!--nav bar-->
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Agenda Clean</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <form class="navbar-form navbar-left">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Jack Gleeson">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">procurar</button>
                            </span>
                        </div>
                    </form>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <div class="navbar-form">
                                <a href="#" data-toggle="modal" data-target="#modalNewContact" class="btn btn-success" role="button">novo contato</a>
                            </div>
                        </li>
                        <li>
                            <div class="navbar-form">
                                <a href="" type="submit" class="btn btn-danger" role="button">sair</a>
                            </div>
                        </li>
                    </ul>
                </div>

            </div>
        </nav>

        <div>
            <table class="table">
                <tr>
                    <th>Nome</th>
                    <th>Telefone</th>
                    <th>Email</th>
                    <th></th>
                    <th></th>
                </tr>
                <tr ng-repeat="contact in contacts">
                    <td>{{contact.Name}}</td>
                    <td>{{contact.Phone}}</td>
                    <td>{{contact.Email}}</td>
                    <td>
                        <a href="#" ng-click="InitEdit(contact)" data-toggle="modal" data-target="#modalEditContact">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                    </td>
                    <td>
                        <a href="#" ng-click="DeleteContact(contact)" >
                            <span class="alert-danger glyphicon glyphicon-trash"></span>
                        </a>
                    </td>
                </tr>
            </table>
        </div>
    </div>

    <!--Modais-->
    <!-- Modal para adcionar contato-->
    <div class="modal fade" id="modalNewContact" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Novo contato</h4>
                </div>
                <div class="modal-body col-lg-10 col-lg-offset-1">
                    <div class="form-group row">
                        <label for="name" class="col-lg-2 col-form-label">Nome</label>
                        <div class="col-lg-10">
                            <input ng-model="contactAdd.Name" class="form-control" type="text" placeholder="novo nome">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="phone" class="col-lg-2 col-form-label">Telefone</label>
                        <div class="col-lg-10">
                            <input ng-model="contactAdd.Phone" class="form-control" type="tel" placeholder="novo telefone" name="phone">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="birthdate" class="col-lg-2 col-form-label">Data de nasc.</label>
                        <div class="col-lg-10">
                            <input ng-model="contactAdd.Birthdate" class="form-control" type="date" placeholder="nova data" name="birthdate">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-lg-2 col-form-label">E-mail</label>
                        <div class="col-lg-10">
                            <input class="form-control" ng-model="contactAdd.Email" type="text" placeholder="novo email" id="email">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="address" class="col-lg-2 col-form-label">Endereço</label>
                        <div class="col-lg-10">
                            <input class="form-control" ng-model="contactAdd.Address" placeholder="novo endereço" type="text" id="address">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#" data-dismiss="modal" ng-click="AddContact(contactAdd)" class="btn btn-success">salvar</a>
                    <a href="#" class="btn btn-danger" data-dismiss="modal">cancelar</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para editar contato-->
    <div class="modal fade" id="modalEditContact" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Editar contato</h4>
                </div>
                <div class="modal-body col-lg-10 col-lg-offset-1">
                    <div class="form-group row">
                        <label for="name" class="col-lg-2 col-form-label">Nome</label>
                        <div class="col-lg-10">
                            <input ng-model="contactEdit.Name" class="form-control" type="text" placeholder="novo nome" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="phone" class="col-lg-2 col-form-label">Telefone</label>
                        <div class="col-lg-10">
                            <input ng-model="contactEdit.Phone" class="form-control" type="tel" placeholder="novo telefone" name="phone" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="birthdate" class="col-lg-2 col-form-label">Data de nasc.</label>
                        <div class="col-lg-10">
                            <input ng-model="contactEdit.Birthdate" class="form-control" type="date" placeholder="nova data" name="birthdate" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-lg-2 col-form-label">E-mail</label>
                        <div class="col-lg-10">
                            <input class="form-control" ng-model="contactEdit.Email" type="text" placeholder="novo email" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="address" class="col-lg-2 col-form-label">Endereço</label>
                        <div class="col-lg-10">
                            <input class="form-control" ng-model="contactEdit.Address" type="text" placeholder="novo endereço" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#" data-dismiss="modal" ng-click="EditContact(contactEdit)" class="btn btn-success">salvar</a>
                    <a href="#" class="btn btn-danger" data-dismiss="modal">cancelar</a>
                </div>
            </div>
        </div>
    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/makedinput")
    @Scripts.Render("~/bundles/contact")
}


